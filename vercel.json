{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/static/(.*)",
      "dest": "/client/static/$1"
    },
    {
      "src": "/logo.svg",
      "dest": "/client/logo.svg"
    },
    {
      "src": "/manifest.json",
      "dest": "/client/manifest.json"
    },
    {
      "src": "/robots.txt",
      "dest": "/client/robots.txt"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ]
} 