{
  "version": 2,
  "name": "attendance-portal",
  "buildCommand": "npm run build:client",
  "outputDirectory": "client/build",
  "installCommand": "npm run install-all",
  "functions": {
    "server/index.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/build/index.html"
    }
  ]
} 